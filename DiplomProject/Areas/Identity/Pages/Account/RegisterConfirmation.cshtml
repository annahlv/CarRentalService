@page
@model RegisterConfirmationModel
@{
    ViewData["Title"] = "Подтверждение аккаунта";
    Layout = "~/Areas/Customer/Views/Shared/_Layout.cshtml";
}
    <main>
        <div class="container-fluid col-12 col-lg-8 h-100 py-2 mt-5 text-center align-items-center">
            <h2>@ViewData["Title"]</h2>
            @{
                if (@Model.DisplayConfirmAccountLink)
                {
                    <p class="py-2">
                        
                        Подтвердите ваш аккаунт, нажав на кнопку ниже <br />
                        <a class="btn orderbtn brdradius my-4" id="confirm-link" href="@Model.EmailConfirmationUrl">Подтвердить</a>
                    </p>
                }
                else
                {
                    <p>
                        Ссылка подтверждения аккаунта отправлена вам на почту
                    </p>
                }
            }
        </div>
    </main>